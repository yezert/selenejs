{
    "name": "@selene/core",
    "version": "0.1.0",
    "type": "module",
    "main": "./dist/index.js",
    "module": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "scripts": {
      "build": "npx tsup --config src/tsup.config.js && node scripts/copy-rust.mjs",
      "build:wasm": "cd ../../crates/core && wasm-pack build --target web --out-dir ../../packages/core/src/rust",
      "dev": "npx tsup --config src/tsup.config.js --watch",
      "test": "npx vitest"
    },
    "files": [
      "dist",
      "src/rust"
    ],
    "repository": {
      "type": "git",
      "url": "git+https://github.com/<your-username>/SeleneJS.git"
    },
    "homepage": "https://github.com/<your-username>/SeleneJS#readme",
    "bugs": {
      "url": "https://github.com/<your-username>/SeleneJS/issues"
    },
    "license": "MIT",
    "keywords": [
      "frontend",
      "reactivity",
      "signals",
      "wasm",
      "rust",
      "ui-framework"
    ],
    "publishConfig": {
      "access": "public"
    },
    "devDependencies": {
      "tsup": "^8.0.0",
      "typescript": "^5.0.0",
      "vitest": "^1.0.0"
    }
  }
